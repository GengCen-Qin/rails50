<p style="color: green"><%= notice %></p>

<h2>你的购物车</h2>

<table>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.product.title %></td>
      <td><%= item.quantity %></td>
      <td class="item_price"><%= number_to_currency(item.total_price) %></td>
    </tr>
  <% end %>
</table>

<br/>

<tr class="total_line">
  <td colspan="2">Total</td>
  <td class="item_price"><%= number_to_currency(@cart.total_price) %></td>
</tr>

<%= button_to "清空购物车", @cart, method: :delete, form: {
  data: {
    turbo_confirm: '您确定清空购物车吗 ?'
  }
}
%>

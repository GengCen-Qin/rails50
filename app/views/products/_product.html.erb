<div id="<%= dom_id product %>">
  <p>
    <strong>Title:</strong>
    <%= product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%=  truncate(strip_tags(product.description), length: 80) %>

  </p>

  <p>
    <strong>Image url:</strong>
    <%= image_tag(product.image_url) %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

</div>
